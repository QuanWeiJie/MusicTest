<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPink">
    <LinearLayout
        android:id="@+id/top"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="←"
            android:background="@color/colorPink"/>
    <TextView
        android:id="@+id/localMusicTextView"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="本地歌曲"
        android:gravity="center"/>
    </LinearLayout>
<ListView
    android:id="@+id/list_view"
    android:layout_width="match_parent"
    android:layout_below="@+id/top"
    android:layout_above="@+id/local_music_bottomLayout"
    android:layout_height="400dp"/>
    <ImageView
        android:id="@+id/image123"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_above="@+id/local_music_bottomLayout"
        android:background="@drawable/shunxu"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/local_music_bottomLayout"
        android:background="#33EEEEEE">
        <ImageView
            android:id="@+id/LocalMusic_icon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:background="@drawable/music_record"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="0dp"
           />
        <TextView
            android:id="@+id/local_music_song"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="告白气球"
            android:layout_toRightOf="@+id/LocalMusic_icon"
            android:maxLines="1"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:textSize="16dp"
            android:textStyle="bold"/>
        <SeekBar
            android:id="@+id/seek_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_toRightOf="@+id/LocalMusic_icon"
            android:layout_above="@+id/local_music_song"
          />
        <TextView
            android:id="@+id/local_music_singer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="周杰伦"
            android:layout_below="@+id/local_music_song"
            android:layout_alignLeft="@+id/local_music_song"
            android:layout_marginBottom="15dp"
            android:textSize="12dp" />
         <ImageView
             android:id="@+id/local_music_next"
             android:layout_width="45dp"
             android:layout_height="45dp"
             android:layout_alignParentRight="true"
             android:src="@drawable/last"
             android:layout_marginRight="10dp"
             android:layout_alignParentBottom="true"
           />
        <ImageView
            android:id="@+id/local_music_play"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:background="@drawable/play"
            android:layout_toLeftOf="@+id/local_music_next"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="8sp"/>
        <ImageView
            android:id="@+id/local_music_last"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:src="@drawable/first"
            android:layout_toLeftOf="@+id/local_music_play"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="8sp"/>
    </RelativeLayout>
</RelativeLayout>